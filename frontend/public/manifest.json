{
  "short_name": "Poke",
  "name": "Poke",
  "start_url": "./index.html",
  "display": "standalone",
  "theme_color": "#000000",
  "background_color": "#ffffff",
  "manifest_version": 2,
  "version": "0.0.1",
  "browser_action": {
    "default_title": "Poke",
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["*://twitter.com/*"],
      "css": ["./static/css/app.css"],
      "js": ["./static/js/contentScript.js"],
      "run_at": "document_end"
    }
  ]
}
