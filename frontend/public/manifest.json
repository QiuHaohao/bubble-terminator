{
  "short_name": "BT",
  "name": "Bubble Terminator",
  "start_url": "./index.html",
  "display": "standalone",
  "theme_color": "#000000",
  "background_color": "#ffffff",
  "manifest_version": 2,
  "version": "1.0.0",
  "browser_action": {
    "default_title": "Poke",
    "default_popup": "index.html"
  },
  "icons": { "16": "16.png",
           "48": "48.png",
          "128": "128.png" },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "http://twitter.com/",
    "https://twitter.com/",
    "https://ec2-54-251-166-188.ap-southeast-1.compute.amazonaws.com/",
    "https://www.ntumods.com/"
  ],
  "content_scripts": [
    {
      "matches": ["*://twitter.com/*"],
      "css": ["./static/css/app.css"],
      "js": ["./static/js/contentScript.js"],
      "run_at": "document_end"
    }
  ]
}
